include ../../../data/menu/menu-product-categories
.ps-home-banner
    .container
        .ps-section__left
            +makeMenu(product_categories, 'menu--dropdown')
        .ps-section__center
            .ps-carousel--dots.owl-slider(
            data-owl-auto= 'true',
            data-owl-loop= 'true',
            data-owl-speed= '5000',
            data-owl-gap= '0',
            data-owl-nav= 'false',
            data-owl-dots= 'true',
            data-owl-item= '1',
            data-owl-item-xs= '1',
            data-owl-item-sm= '1',
            data-owl-item-md= '1',
            data-owl-item-lg= '1',
            data-owl-duration= '1000',
            data-owl-mousedrag= 'on'
            )
                a(href='#'): img(src="img/slider/home-5/1.jpg" alt="")
                a(href='#'): img(src="img/slider/home-5/2.jpg" alt="")
                a(href='#'): img(src="img/slider/home-5/3.jpg" alt="")
            a(href='#'): img(src="img/slider/home-5/promotion-6.jpg" alt="")
        .ps-section__right
            a(href='#'): img(src="img/slider/home-5/promotion-1.jpg" alt="")
            a(href='#'): img(src="img/slider/home-5/promotion-2.jpg" alt="")
            a(href='#').wide: img(src="img/slider/home-5/promotion-3.jpg" alt="")
            a(href='#'): img(src="img/slider/home-5/promotion-4.jpg" alt="")
            a(href='#'): img(src="img/slider/home-5/promotion-5.jpg" alt="")
